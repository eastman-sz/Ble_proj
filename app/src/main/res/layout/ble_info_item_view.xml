<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    tools:context=".info.BleInfoActivity"
    android:orientation="vertical"
    android:background="@drawable/list_item_bg"
    >
    <com.common.base.CustomFontTextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="@dimen/sfs_s4"
        android:textColor="@color/sfs_c5"
        />

    <com.common.base.CustomFontTextView
        android:id="@+id/valueTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="@dimen/sfs_s2"
        android:textColor="@color/sfs_c2"
        />

    <ImageView style="@style/full_line_style" />
</LinearLayout>