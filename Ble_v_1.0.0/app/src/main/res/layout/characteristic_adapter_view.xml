<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ble.sz.gvd.proj.MainActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <com.ble.base.CustomFontTextView
                android:id="@+id/name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/c12"
                android:textSize="@dimen/s2"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="特征名称"
                />

            <com.ble.base.CustomFontTextView
                android:id="@+id/characteristic_uuid_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/c13"
                android:textSize="@dimen/s1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="UUID"
                />

            <com.ble.base.CustomFontTextView
                android:id="@+id/data_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/c8"
                android:textSize="@dimen/s1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="UUID"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/nextstep_right_arrow_n"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/basic_line_height" android:background="@color/c15"/>

</LinearLayout>
